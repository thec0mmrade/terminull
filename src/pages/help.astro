---
import BaseLayout from '../layouts/BaseLayout.astro';
import BoxFrame from '../components/BoxFrame.astro';
---

<BaseLayout title="Help" description="terminull command reference and navigation guide." page="HELP">
  <h1 class="page-title">COMMAND REFERENCE</h1>

  <BoxFrame title="COMMAND PROMPT">
    <p class="help-intro">
      The command prompt is always visible at the bottom of the screen.
      Press <code>/</code> or <code>:</code> to focus it from anywhere.
    </p>
  </BoxFrame>

  <div class="help-section">
    <h2>Navigation Commands</h2>
    <div class="help-table">
      <div class="help-row">
        <span class="help-cmd">help</span>
        <span class="help-desc">Show this command reference</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">home</span>
        <span class="help-desc">Go to main menu</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">back</span>
        <span class="help-desc">Go to previous page</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">ls</span>
        <span class="help-desc">List articles in current volume</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">cd &lt;section&gt;</span>
        <span class="help-desc">Navigate to a section (about, manifesto, help, vol)</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">read &lt;num&gt;</span>
        <span class="help-desc">Read article by number (e.g., read 01)</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">vol &lt;n&gt;</span>
        <span class="help-desc">Go to volume n (e.g., vol 1)</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">search &lt;query&gt;</span>
        <span class="help-desc">Search articles</span>
      </div>
    </div>
  </div>

  <div class="help-section">
    <h2>Display Commands</h2>
    <div class="help-table">
      <div class="help-row">
        <span class="help-cmd">crt</span>
        <span class="help-desc">Toggle CRT scanline effect</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">clear</span>
        <span class="help-desc">Scroll to top of page</span>
      </div>
    </div>
  </div>

  <div class="help-section">
    <h2>Keyboard Shortcuts</h2>
    <div class="help-table">
      <div class="help-row">
        <span class="help-cmd">j / ↓</span>
        <span class="help-desc">Move down in list</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">k / ↑</span>
        <span class="help-desc">Move up in list</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">Enter</span>
        <span class="help-desc">Select highlighted item</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">Escape / q</span>
        <span class="help-desc">Go back</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">0-9</span>
        <span class="help-desc">Quick jump to numbered item</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">/ or :</span>
        <span class="help-desc">Focus command prompt</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">?</span>
        <span class="help-desc">Toggle help overlay</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">p</span>
        <span class="help-desc">Previous article (on article pages)</span>
      </div>
      <div class="help-row">
        <span class="help-cmd">n</span>
        <span class="help-desc">Next article (on article pages)</span>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-title {
    color: var(--gold);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .help-intro {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .help-intro code {
    color: var(--pink);
    background: var(--bg-surface);
    padding: 0.125rem 0.375rem;
    border: 1px solid var(--border);
    font-family: 'IBM Plex Mono', monospace;
    font-size: 1.25rem;
  }

  .help-section {
    margin: 1.5rem 0;
  }

  .help-section h2 {
    color: var(--cyan);
    font-size: 1.625rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.375rem;
    border-bottom: 1px solid var(--border);
  }

  .help-table {
    font-size: 1.25rem;
  }

  .help-row {
    display: flex;
    padding: 0.375rem 0;
    border-bottom: 1px solid var(--border);
  }

  .help-cmd {
    color: var(--green);
    font-weight: bold;
    min-width: 16rem;
    flex-shrink: 0;
  }

  .help-desc {
    color: var(--text-secondary);
  }

  @media (max-width: 640px) {
    .help-row { flex-direction: column; gap: 0.125rem; }
    .help-cmd { min-width: auto; }
  }
</style>
